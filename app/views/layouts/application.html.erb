<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  </head>

  <body>
    <nav class="my-navbar">
      <%= link_to image_tag("logo-mc.png", size: "200x100"), root_path %>
       <div class="navbar-menu">
          <ul class="navbar-list">
            <li class="navbar-item">
              <%= link_to "Cocktail\' list", cocktails_path, class: "my-btn my-btn-empty"%>
            </li>
            <li class="navbar-item">
              <%= link_to "Create a cocktail", new_cocktail_path, class: "my-btn my-btn-empty" %>
            </li>
          </ul>
        </div>
    </nav>

    <%= yield %>

  </body>
</html>
