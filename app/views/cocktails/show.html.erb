<div class="background">
  <div class="my-container">
    <div class="show-card">
      <% if @cocktail.photo.attached? %>
        <div class="cocktail-title-show" style="background-image: url(<%= cl_image_path(@cocktail.photo.key) %>)">
      <% else %>
        <div class="cocktail-title-show" style="background-image: url(<%= cl_image_path('michael-oeser-nfj1gzws7HM-unsplash_sj2vgq') %>)">
      <% end %>
      <h1><%= @cocktail.name %></h1>
      </div>
      <div class="cocktail-info">
        <div class="cocktail-details">
          <h2>Recipe</h2>
        </div>
        <div class="doses">
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "my-btn-blue my-btn" %>
        <ul>
          <%= "<li>No ingredient yet!</li>".html_safe if @doses.empty? %>
          <% @doses.each do |dose| %>
          <li>
            <p><strong><%= Ingredient.find(dose.ingredient_id).name %>:</strong></p><p><%= dose.description %></p>
            <%= link_to "delete", dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
          </li>
          <% end %>
        </ul>
        </div>
      </div>
    </div>
  </div>

</div>
