<div class="background">
  <div class="my-container">
    <div class="show-card">
      <% if @cocktail.photo.attached? %>
        <div class="cocktail-title-show" style="background-image: url(<%= cl_image_path(@cocktail.photo.key) %>)">
      <% else %>
        <div class="cocktail-title-show" style="background-image: url(<%= cl_image_path('michael-oeser-nfj1gzws7HM-unsplash_sj2vgq') %>)">
      <% end %>
      <h1><%= @cocktail.name %></h1>
      </div>
      <div class="cocktail-info">
        <div class="cocktail-details">
          <h2>Recipe</h2>
        </div>
        <div class="doses">
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "my-btn-brown my-btn" %>
        <table>
          <tr>
            <th>Ingredients</th>
            <th>Doses</th>
            <th></th>
          </tr>
          <% if @doses.empty? %>
          <tr>
            <td>No ingredient yet!</td>
            <td></td>
            <td></td>
          </tr>
          <% else %>
          <% @doses.each do |dose| %>
          <tr>
            <td><strong><%= Ingredient.find(dose.ingredient_id).name %></strong></td>
            <td><%= dose.description %></td>
            <td class="action"><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "my-btn my-btn-blue"%></td>
          </tr>
          <% end %>
          <% end %>
        </table>
        </div>
        <div class="cocktail-info-footer">
          <%= link_to "Back to list", cocktails_path, class: "my-btn my-btn-brown"%>
        </div>
      </div>
    </div>
  </div>

</div>
