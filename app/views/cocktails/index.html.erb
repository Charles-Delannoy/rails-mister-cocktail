<div class="background">
  <div class="my-container">
    <h1>Cocktails</h1>

    <ul class="cocktails-list">
      <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: 'cocktail-card-link' do%>
      <% if cocktail.photo.attached? %>
        <li class="cocktail-card" style="background-image: url(<%= cl_image_path(cocktail.photo.key) %>)">
      <% else %>
        <li class="cocktail-card" style="background-color: rgba(163,154,146,0.7)">
      <% end %>
      <p><%= cocktail.name %></p>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
