<div class="background">
  <div class="container">
    <h1>Cocktails</h1>

    <ul class="cocktails-list">
      <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <li class="cocktail-card" style="background-image: url(<%= cl_image_path(cocktail.photo.key) %>)">
      <% else %>
        <li class="cocktail-card">
      <% end %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
